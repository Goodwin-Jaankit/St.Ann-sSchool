@model IEnumerable<DatabasAccess.ClassSubjectTable>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<!-- DataTables Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">PROGRAM SESSION SETTING</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ClassTable.ClassName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SubjectTable.Name)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClassTable.ClassName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SubjectTable.Name)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ClassSubjectID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.ClassSubjectID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.ClassSubjectID })
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>