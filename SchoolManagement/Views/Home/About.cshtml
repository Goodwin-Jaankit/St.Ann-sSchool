@{
    ViewBag.Title = "DashBoard";
}

<div class="container">
    <!-- Student Management -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Student Management</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-bordered table-striped">
                        <tbody>
                            <tr>
                                <td class="text-center">
                                    <a href="@Url.Action("Create", "StudentTables")">
                                        <i class="fas fa-user-graduate fa-3x"></i>
                                        <h4>Add New Student</h4>
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a href="@Url.Action("Create", "StudentPromotTables")">
                                        <i class="fas fa-user fa-3x"></i>
                                        <h4>Student Promote</h4>
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a href="@Url.Action("Create", "ExamTables")">
                                        <i class="fas fa-poll-h fa-3x"></i>
                                        <h4>Students Exam</h4>
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a href="@Url.Action("Index", "StudentTables")">
                                        <i class="fas fa-user-friends fa-3x"></i>
                                        <h4>Students List</h4>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Employee Management -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Employee Management</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-bordered table-striped">
                        <tbody>
                            <tr>
                                <td class="text-center">
                                    <a href="@Url.Action("Create", "StaffTables")">
                                        <i class="fas fa-user-tie fa-3x"></i>
                                        <h4>Add New Employee</h4>
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a href="@Url.Action("Create", "StaffAttendanceTables")">
                                        <i class="fas fa-chart-line fa-3x"></i>
                                        <h4>Staff Attendance</h4>
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a href="@Url.Action("Index", "StaffTables")">
                                        <i class="fas fa-users fa-3x"></i>
                                        <h4>Employee List</h4>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- User Management and Accounts -->
    <div class="row mb-4">
        <!-- User Management -->
        <div class="col-md-6">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">User Management</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-bordered table-striped">
                        <tbody>
                            <tr>
                                <td class="text-center">
                                    <a href="@Url.Action("Register", "Account")">
                                        <i class="fas fa-user fa-3x"></i>
                                        <h4>Add New User</h4>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Accounts and Finance -->
        <div class="col-md-6">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Accounts and Finance</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-bordered table-striped">
                        <tbody>
                            <tr>
                                <td class="text-center">
                                    <a href="@Url.Action("Index", "SubmissionFeeTables")">
                                        <i class="fas fa-funnel-dollar fa-3x"></i>
                                        <h4>Student Fee</h4>
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a href="@Url.Action("Create", "EmployeeSalaryTables")">
                                        <i class="fas fa-funnel-dollar fa-3x"></i>
                                        <h4>Staff Salaries</h4>
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a href="@Url.Action("Index", "ExpensesTables")">
                                        <i class="fas fa-list fa-3x"></i>
                                        <h4>Expenses</h4>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- System Setup and Help & Support -->
    <div class="row mb-4">
        <!-- System Setup -->
        <div class="col-md-6">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">System Setup</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-bordered table-striped">
                        <tbody>
                            <tr>
                                <td class="text-center">
                                    <a href='@Url.Action("ListTypes", "SystemSetup")'>
                                        <i class="fas fa-ellipsis-v fa-3x"></i>
                                        <h4>List Types</h4>
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a href='@Url.Action("ListTypesData", "SystemSetup")'>
                                        <i class="fas fa-list fa-3x"></i>
                                        <h4>List Types Data</h4>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Help & Support -->
        <div class="col-md-6">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Help & Support</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-bordered table-striped">
                        <tbody>
                            <tr>
                                <td class="text-center">
                                    <a href='#'>
                                        <i class="fas fa-desktop fa-3x"></i>
                                        <h4>Email</h4>
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a href='#'>
                                        <i class="fas fa-sms fa-3x text-success"></i>
                                        <h4>Alert System</h4>
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a href='@Url.Action("VideosInfo", "Videos")'>
                                        <i class="far fa-eye fa-3x text-danger"></i>
                                        <h4>Videos</h4>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
